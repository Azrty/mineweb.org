nav.navbar-default.navbar-static-side(role='navigation')
  .sidebar-collapse
    ul#side-menu.nav.metismenu
      li.nav-header
        .dropdown.profile-element
          span
            img.img-circle(alt='image', src="http://www.gravatar.com/avatar/" + user.md5Email)
          a.dropdown-toggle(data-toggle='dropdown', href='#')
            span.clear
              span.block.m-t-xs
                strong.font-bold #{user.username}
              span.text-muted.text-xs.block #{__(user.roleName)}
      if PermissionsService.can('ADMIN-ACCESS_DASHBOARD', user)
        li
          a(href="/admin/dashboard")
            i.fa.fa-th-large
            span.nav-label #{__('Dashboard')}
      if PermissionsService.can('ADMIN-VIEW_TICKETS', user) || PermissionsService.can('ADMIN-FIND_LICENSE', user) || PermissionsService.can('ADMIN-FIND_USER', user)
        li
          a(href='#')
            i.fa.fa-question
            span.nav-label #{__('Support')}
            span.fa.arrow
          ul.nav.nav-second-level.collapse
            if PermissionsService.can('ADMIN-VIEW_TICKETS', user)
              li
                a(href="/admin/support")
                  | #{__('Voir les tickets')}
                  span.label.label-warning.pull-right
            if PermissionsService.can('ADMIN-FIND_LICENSE', user)
              li
                a(href="/admin/license/find") #{__('Chercher une licence')}
            if PermissionsService.can('ADMIN-FIND_USER', user)
              li
                a(href="/admin/user/find") #{__('Chercher un utilisateur')}
      if PermissionsService.can('ADMIN-UPDATE_INDEX', user)
        li
          a(href="/admin/update")
            i.fa.fa-wrench
            span.nav-label #{__('Mise à jours')}
      if PermissionsService.can('ADMIN-VIEW_API_LOGS', user) || PermissionsService.can('ADMIN-MANAGE_FAQ', user)
        li
          a(href='#')
            i.fa.fa-book
            span.nav-label #{__('API')}
            span.fa.arrow
          ul.nav.nav-second-level.collapse
            if PermissionsService.can('ADMIN-VIEW_API_LOGS', user)
              li
                a(href="/admin/api/logs") #{__('Voir les logs')}
            if PermissionsService.can('ADMIN-MANAGE_FAQ', user)
              li
                a(href="/admin/api/faq") #{__('Éditer la FAQ (CMS)')}
      if PermissionsService.can('ADMIN-VIEW_STATS', user)
        li
          a(href="/admin/stats")
            i.fa.fa-line-chart
            span.nav-label #{__('Statistiques')}
      if PermissionsService.can('ADMIN-VIEW_PAYMENTS_LIST', user)
        li
          a(href="/admin/payments/list")
            i.fa.fa-euro
            span.nav-label #{__('Liste des paiements')}
      if PermissionsService.can('ADMIN-MANAGE_DEVELOPERS', user)
        li
          a(href='/admin/developers')
            i.fa.fa-plus
            span.nav-label #{__('Développeurs')}
            span.fa.arrow
          ul.nav.nav-second-level.collapse
            li
              a(href="/admin/developer/candidate") #{__('Accéder aux candidatures')}
            li
              a(href="/admin/developer/view/submitted") #{__('Plugin/Thèmes en attente')}
            li
              a(href="/admin/developer/view/online") #{__('Plugins/Thèmes en ligne')}
      li
        hr
      if PermissionsService.can('ADMIN-MANAGE_SETTINGS', user)
        li
          a(href="/admin/settings")
            i.fa.fa-cog
            span.nav-label #{__('Paramètres')}
