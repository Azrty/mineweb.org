      .col-sm-4.col-md-3.col-xs-6
        .customer
          a(href='http://hunterfight.fr')
            img.img-responsive(src='img/customers/hunterfight.png', title='HunterFight', data-placement='bottom', data-toggle='tooltip', alt='')
      .col-sm-4.col-md-3.col-xs-6
        .customer
          a(href='http://octonia.fr')
            img.img-responsive(src='img/customers/octonia.png', title='Octonia', data-placement='bottom', data-toggle='tooltip', alt='')
