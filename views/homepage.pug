include ./layouts/head
include ./layouts/header

section#intro.text-intro.no-padding-bottom
  .container
      .row
        .col-md-12
          h1
            | #{__('MineWeb c\'est un CMS ')}
            span.rotate  #{__('à votre écoute')}, #{__('pensé pour vous')}, #{__('qui vous accompagne')}
          h3.weight-300 #{__('C\'est complet, simple et rapide')}
      .row
        .col-md-12
          p
            | #{__('Des centaines de serveurs nous font confiance, pourquoi pas vous ?')}
            br
            | #{__('Essayez par vous-même.')}
          p
            a#submit_intro.btn.btn-primary(href='http://demo.craftwb.fr') #{__('Accéder au site de démonstration')}
        .col-md-12.col-lg-8.col-lg-offset-2
          p.margin-bottom--zero
            img.img-responsive(alt='', src='img/features3_mb.png')

