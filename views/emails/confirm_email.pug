extends ../layouts/email

block message
  p #{request.__('Bonjour')} <strong>#{username}</strong>,
    br
    br
    | #{request.__('Vous venez de procéder à votre inscription sur')} <strong>mineweb.org</strong> #{request.__('il y a quelques instants')} #{request.__('avec l\'IP')} <strong>#{ip}</strong>.
    br
    | #{request.__('Nous avons besoin de procéder à une vérification de votre email, pour cela, il vous suffit de cliquer sur le lien ci-dessous')}
    br
    a(style='text-align:center;color:#428bca;text-decoration:none;', href=locals.url) #{request.__('Cliquez ici pour vérifier votre email')}

  p
    small(style='color:grey;') #{request.__('Si vous ne pouvez pas cliquer sur le bouton ci-dessus, mettez ce URL dans votre navigateur :')} #{url}

  p
    small
      em #{request.__('Ceci est un message automatique, veuillez ne pas y répondre.')}
