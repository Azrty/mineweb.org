doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    title #{__(title)} - MineWeb

    meta(name="description" content="MineWeb est un CMS Minecraft simple, complet et rapide. Il à été développé pour la communauté, dans le but de completer leurs besoin. Ce CMS est la version 2 de LapisCraft, développé par Eywek. Le CMS possède son propre plugin pour plus de faciliter.")
    meta(name="author" content="Eywek")
    meta(name="keywords" content="Eywek, Mac', développement web, CMS, LapisCraft, MineWeb, minecraft, dev web, site, personnalisable, disponible, beta, alpha, finis, hebergement, pas cher, plugin, pas jsonapi, simple, complet, rapide")

    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='robots', content='all,follow')

    block metas
      meta(property="og:url" content="https://mineweb.org/")
      meta(property="og:type" content="website")
      meta(property="og:site_name" content="MineWeb")
      meta(property="og:title" content="MineWeb")
      meta(property="og:description" content="A Minecraft CMS")
      meta(property="og:image" content="http://mineweb.org/favicon.png")

      meta(name="twitter:card" content="summary")
      meta(name="twitter:site" content="@MineWebCMS")
      meta(name="twitter:title" content="MineWeb")
      meta(name="twitter:description" content="A Minecraft CMS")
      meta(name="twitter:image:src" content="https://mineweb.org/favicon.png")
      meta(name="twitter:url" content="https://mineweb.org/")

    // Bootstrap
    link(rel='stylesheet', href='/styles/bootstrap.min.css')
    link(rel='stylesheet', href='/styles/navbar.css')

    // Jquery
    script(src="/js/jquery.1.11.0.min.js")

    // Notifications
    link(href="/styles/toastr.min.css" rel="stylesheet")

    // Google fonts - Open Sans
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,800,400italic')
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Roboto:400', rel='stylesheet', type='text/css')

    // FontAwesome
    link(href='/styles/font-awesome.min.css', rel='stylesheet', type='text/css')

    // Stroke 7 font by Pixeden (http://www.pixeden.com/icon-fonts/stroke-7-icon-font-set)
    link(rel='stylesheet', href='/styles/pe-icon-7-stroke.css')

    link(rel='stylesheet', href='/styles/helper.css')

    // theme stylesheet
    link#theme-stylesheet(rel='stylesheet', href='/styles/style.blue.css')

    link(rel='stylesheet', href='/styles/simpletextrotator.css')

    // Custom stylesheet - for your changes
    link(rel='stylesheet', href='/styles/custom.css')

    block customCss


    // Favicon
    link(rel='shortcut icon', href='/favicon.png')

    //Tweaks for older IEs
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      |
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
